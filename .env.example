# OpenRouter API Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_MODEL=openrouter/gpt-4.1-nano

# Translation Settings (optimized for 128K context)
CHUNK_SIZE=45000
MAX_RETRIES=3
RETRY_DELAY=1.0
REQUEST_TIMEOUT=180.0
MAX_TOKENS=15000

# Optimization Settings (maximum 128K context usage)
BATCH_SIZE=3
MAX_CONCURRENT_REQUESTS=2
OPTIMAL_CHUNK_SIZE=80000

# Output Settings
SAVE_XML=false
LOG_LEVEL=INFO 